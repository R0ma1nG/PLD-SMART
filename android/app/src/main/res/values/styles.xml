<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/secondaryColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
    </style>

    <!-- Button style -->
    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorAccent">@color/primaryColor</item>
        <item name="android:background">@drawable/default_button</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="TitleFontTheme">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
